@{
    ViewData["Title"] = "Lecturer Portal";
}

<style>
    body {
        background-color: #FDF2E9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        line-height: 1.6;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100vh;
    }

    .overlay {
        position: absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
        background-color: rgba(255, 255, 255, 0.25);
        z-index: -1;
    }

    .navbar {
        margin-bottom: 20px;
    }

    main {
        padding: 20px;
        text-align: center;
        backgroung-color: rgba(255, 255, 255,0.9);
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 600px;
        margin-top: 20px;
        z-index:1;
        position: relative;
    }

    input[type="email"], input[type="password"] {
        width: 100%;
        padding: 12px;
        margin;
        10px;
        border: 1px solid #bbb;
        border-radius: 5px;
        transition: border-color 0.3s ease-in-out;
    }

        input[type="email"]:focus, input[type="password"]:focus {
            border-color: #4CAF50;
        }

    button[type="submit"], .btn {
        width: auto;
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        margin:10px 0;
        text-decoration: none;
       
    }

    .btn-primary, .btn-secondary, .btn-ifo {
        background-color: #5f4980;
    }

        button[type="submit"]:hover, .btn:hover {
        background-color: #bdaed4;
            color:white;
        }

    .alert-success {
        color: #e3d7f5;
        margin-top: 20px ;
        padding:12px;
        background-color: #7a869e;
        color:white;
        border-radius:5px;
        border: 1px solid #070808;
    }

</style>

<h2> Lecturer Portal</h2>

    <div>
        <h3> Submit your claim.</h3>
        <p>To submit you claim, please click the button below:</p>
        <a href="/Lecturer/TrackClaim"  class="btn btn-primary">Submit Claim</a>
    </div>

<div>
    <h3> Check the status of your claim</h3>
    <p>you can check your claim here:</p>
    <a href="/Lecturer/TrackClaim" class="btn btn-info">Track Claim</a>
</div>
