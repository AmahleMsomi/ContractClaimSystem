@*
    
*@
@{
    ViewData["Titel"] = "Programme Coordinator Portal";
}

<style>
    body{
        backgroung-color: #186d94;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana,  sans-serif;
        color: #333;
        line-height: 1.6;
        margin:0;
        padding:0;
        display:flex;
        flex-direction:column;
        align-items: center;
        height:100vh;
    }
    .navbar{
        margin-bottom:20px;
    }
    main{
        padding: 20px;
        text-align:center;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow:0 4px 10px rgba(0, 0, 0,0.15);
        width:100%;
        max-width:  400px;
        margin-top: 20px;
    }

    input[type="email"], input[type="password"]{
        width:100%;
        padding: 12px;
        margin:10px 0;
        border:1px solid #bbb;
        transition: border-color 0.3s ease-in-out;
    }
    input[type="email"]:focus, input[type="password":focus {
         border-color: #4CAF50;

    }

    button[type="submit"] {
    width:100%;
        background-color: #4CAF50;
        color: white;
        padding:12px 20px;
        border:none;
        border-radius:5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease-in-out;
    }

    button[type="submit"]:hover {
        background-color: #45a049;

    }

    .alert {
        color: #D32F2F;
        margin:10px 0;
    }
</style>
<main>
    <h2>Coordinator Login</h2>

    @if (ViewBag.Message !=null)
    {
        <div class="alert">@ViewBag.Message</div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="username"> Email</label>
            <input type="email" id="username" name="password" placeholder="Enter email" required/>
        </div>
        <div class="form-group">
            <label for="password"> Password</label>
            <input type="password" id="password" name="username" placeholder="Enter password" required />
        </div>
        <input type="hidden" name="returnUrl" value="CoordinatorManagerLogin"/>
        <button type="submit">Login</button> 
        <p>Login as Lecturer? <a asp-controller="Home" asp-action="LecturerLogin"> login Here</a> </p>
    </form>
</main>
